<?xml version="1.0" encoding="utf-8"?>
<!--credit to Folkert http://www.dibbus.com/2011/02/gradient-buttons-for-android/ -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:startColor="#ffffff"
                android:endColor="#ffffff"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="#cccccc" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="0dp"
                android:right="10dp"
                android:bottom="0dp" />
        </shape>
    </item>
</selector>