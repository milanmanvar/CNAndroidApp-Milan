<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/splash_bg" >

    <ImageView
        android:id="@+id/app_logo_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:contentDescription="@string/logo_content_description"
        android:src="@drawable/splash_logo"
        android:adjustViewBounds="true"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/login_layout"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center|top"
        android:orientation="vertical"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="horizontal"
            android:gravity="center_vertical|right">

            <ImageView
                android:id="@+id/app_logo_image_small"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".20"
                android:contentDescription="@string/logo_content_description"
                android:src="@drawable/splash_logo"
                android:adjustViewBounds="true"
                android:layout_marginTop="3dp" />

            <TextView
                android:id="@+id/login_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:gravity="left"
                android:textSize="30sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_marginLeft="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dip"
            android:weightSum="1"
            android:gravity="right"
            android:layout_weight="0.31">


        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_gravity="center_horizontal|left"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/username_label_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginRight="7dip"
                android:text="@string/username_label"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/content_text"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="0.5"
                android:singleLine="true"
                android:inputType="text"
                android:background="@drawable/selector_white_text_field"
                android:textAlignment="textStart"
                android:textSize="17sp"
                android:textIsSelectable="true" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_gravity="center_horizontal|left"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="10dip">

            <TextView
                android:id="@+id/password_label_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginRight="7dip"
                android:text="@string/password_label"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/pass_edit"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="0.5"
                android:singleLine="true"
                android:inputType="textPassword"
                android:background="@drawable/selector_white_text_field"
                android:textStyle="bold"
                android:textSize="17sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_gravity="center_horizontal|left"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="160dp">

            <Button
                android:id="@+id/login_btn"
                android:layout_width="73dp"
                android:layout_height="36dp"
                android:text="@string/login_button_text"
                android:textSize="12sp"
                android:background="@drawable/selector_white_button"
                android:textColor="#ffffff"
                android:layout_marginLeft="70dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dip"
            android:weightSum="1"
            android:gravity="right">

            <TextView
                android:id="@+id/register_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/create_account_underline"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:focusableInTouchMode="false" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/website_address"
            android:textSize="30sp"
            android:textColor="@android:color/white"/>

    </LinearLayout>
</RelativeLayout>