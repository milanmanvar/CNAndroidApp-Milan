<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/splash_bg" >

    <ImageView
        android:id="@+id/app_logo_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:contentDescription="@string/logo_content_description"
        android:src="@drawable/splash_logo"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/login_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="300dip"
        android:paddingRight="300dip">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="horizontal"
            android:gravity="center_vertical|right">

            <ImageView
                android:id="@+id/app_logo_image_small"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".20"
                android:contentDescription="@string/logo_content_description"
                android:src="@drawable/splash_logo"
                android:adjustViewBounds="true" />

            <TextView
                android:id="@+id/login_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.70"
                android:gravity="left"
                android:text="@string/login_title_text"
                android:textSize="60sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_marginLeft="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dip"
            android:weightSum="1"
            android:gravity="right">

            <TextView
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginRight="7dip"
                android:text="@string/username_label"
                android:textSize="26sp"
                android:textColor="@android:color/white" />

            <EditText
                android:id="@+id/content_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".90"
                android:singleLine="true"
                android:inputType="text"
                android:background="@drawable/selector_white_text_field"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dip"
            android:weightSum="1"
            android:gravity="right">

            <TextView
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginRight="7dip"
                android:text="@string/password_label"
                android:textSize="26sp"
                android:textColor="@android:color/white" />

            <EditText
                android:id="@+id/pass_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.90"
                android:singleLine="true"
                android:inputType="textPassword"
                android:background="@drawable/selector_white_text_field"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:gravity="right">

            <Button
                android:id="@+id/login_btn"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight=".50"
                android:layout_marginTop="15dip"
                android:text="@string/login_button_text"
                android:textSize="26sp"
                android:background="@drawable/selector_white_button" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dip"
            android:weightSum="1"
            android:gravity="right">

            <TextView
                android:id="@+id/register_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/create_account_underline"
                android:textSize="26sp"
                android:textColor="@android:color/white"
                android:focusableInTouchMode="false" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>