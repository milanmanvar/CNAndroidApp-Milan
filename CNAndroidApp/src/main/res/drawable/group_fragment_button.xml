<?xml version="1.0" encoding="utf-8"?>
<!--credit to Folkert http://www.dibbus.com/2011/02/gradient-buttons-for-android/ -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:drawable="@drawable/group_fragment_button_checked" />
    <item android:state_checked="false">
        <shape>
            <solid
                android:color="#EEEEEE" />
            <stroke
                android:width="1dp"
                android:color="#D7D7D7" />
            <padding
                android:top="10dp"
                android:left="10dp"
                android:right="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>
</selector>