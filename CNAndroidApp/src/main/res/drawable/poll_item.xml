<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:state_pressed="true">
        <shape>
            <solid android:color="@color/darker_selected_color" />
            <stroke
                android:width="1dp"
                android:color="@color/darkest_selected_color" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item android:state_checked="true" android:state_pressed="false">
        <shape>
            <solid android:color="@color/selected_color" />
            <stroke
                android:width="1dp"
                android:color="@color/darker_selected_color" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item android:state_checked="false" android:state_pressed="true">
        <shape>
            <solid
                android:color="#DDDDDD" />
            <stroke
                android:width="1dp"
                android:color="#AAAAAA" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="#EEEEEE" />
            <stroke
                android:width="1dp"
                android:color="#D7D7D7" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>