<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/roster_parent_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clickable="true"
    android:background="@drawable/list_selector"
    android:padding="10dp" >

    <ImageView
        android:layout_width="@dimen/user_icon_width"
        android:layout_height="@dimen/user_icon_height"
        android:id="@+id/user_avatar"
        android:src="@drawable/default_user_icon"
        android:layout_marginRight="8dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/user_name"
            android:text="@string/example_text_short"
            android:textColor="@color/follower_name"
            android:textSize="16sp"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/headline"
            android:text="@string/example_text_short"
            android:textColor="@color/mid_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/follow_button"
            android:layout_gravity="right"
            android:padding="10dp"
            android:gravity="center"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/follow_img"
                android:layout_marginRight="5dp"
                android:scaleType="fitXY"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/follow_text"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>