<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/black">

    <view
        class="com.thecn.app.views.SquareView$SquareImageView"
        android:id="@+id/image"
        android:adjustViewBounds="true"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:contentDescription="@string/image_thumbnail_description"
        android:layout_centerInParent="true" />

    <ImageButton
        android:id="@+id/cancel"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignRight="@id/image"
        android:layout_alignTop="@id/image"
        android:contentDescription="@string/image_thumbnail_remove"
        android:src="@drawable/ic_action_cancel_white"/>

</RelativeLayout>